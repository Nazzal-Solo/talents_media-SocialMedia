{
  "name": "social-media-platform",
  "version": "1.0.0",
  "description": "Production-ready social media platform with dark neon theme",
  "private": true,
  "workspaces": [
    "packages/shared",
    "apps/api",
    "apps/web",
    "server"
  ],
  "scripts": {
    "predev": "node scripts/kill-ports.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\" --names \"server,client\" --prefix-colors \"blue,green\" --kill-others-on-fail false --restart-tries 0",
    "dev:api": "cd apps/api && npm run dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:shared && npm run build:api && npm run build:web",
    "build:shared": "cd packages/shared && npm run build",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:server": "cd server && npm run build",
    "start": "npm run start:api",
    "start:api": "cd apps/api && npm start",
    "test": "npm run test:api",
    "test:api": "cd apps/api && npm run test",
    "test:server": "cd server && npm run test",
    "lint": "npm run lint:shared && npm run lint:api && npm run lint:web",
    "lint:shared": "cd packages/shared && npm run lint || true",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:server": "cd server && npm run lint",
    "format": "npm run format:api && npm run format:web",
    "format:api": "cd apps/api && npm run format",
    "format:web": "cd apps/web && npm run format",
    "format:server": "cd server && npm run format",
    "migrate": "cd server && npm run migrate",
    "migrate:server": "cd server && npm run migrate",
    "seed": "cd server && npm run seed",
    "seed:server": "cd server && npm run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
